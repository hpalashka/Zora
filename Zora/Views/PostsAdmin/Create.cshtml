@model PostBindingModel
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<h4>@UITextConstants.CreatePost</h4>
<br />
<hr />
<br />
<br />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" asp-controller="PostsController" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="@UITextConstants.RequiredField" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="10" asp-for="Description" class="form-control" placeholder="@UITextConstants.RequiredField"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <div class="input-group">
                    <div class="custom-file input-group-append">
                        <input asp-for="ImageFile" type="file" class="custom-file-input" id="myInput" aria-describedby="myInput">
                        <label class="custom-file-label" for="myInput">@UITextConstants.ChooseFile</label>
                    </div>
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-page-handler="Create" type="submit" value="@UITextConstants.Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@UITextConstants.BackToList</a>
</div>
@section Scripts
{
    <script src="~/js/Upload.js"></script>
}


