@model IEnumerable<PostConciseIndexViewModel>

<div class="container">

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-xs-12 col-sm-5 col-md-3 col-lg-3 pb-3">
                <img alt="@item.Title" src="@item.ImagePath" />
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
                <p style="font-weight: bold">@item.Title</p>
                <p style="font-weight: bold">@item.CreatedDate</p>
                <p>@Html.Raw(item.Description.PadRight(350, ' ').Substring(0, 350)).....<i>@Html.ActionLink(UITextConstants.SeeMore, "Details", new { id = item.Id })</i></p>
            </div>
        </div>
        <br />
    }
</div>