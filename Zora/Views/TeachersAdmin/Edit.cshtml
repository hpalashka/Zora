@model TeacherEditBindingModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<br />
<h4>@UITextConstants.Edit</h4>
<br />
<hr />
<br />
<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="ImageFileFromDatabase" class="form-control" type="hidden" />
            <div class="pb-3">
                <img src="@Model.ImagePath" alt="Zora_teachers"/>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file input-group-append">
                        <input asp-for="ImageFile" type="file" class="custom-file-input" id="myInput" aria-describedby="myInput">
                        <label class="custom-file-label" for="myInput">@UITextConstants.ChooseFile</label>
                    </div>
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@UITextConstants.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@UITextConstants.Save</a>
</div>

@section Scripts
{
    <script src="~/js/Upload.js"></script>
}
